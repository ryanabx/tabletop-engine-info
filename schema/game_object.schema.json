{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": ".",
    "title": "GameObject",
    "description": "A generic game object",
    "type": "object",
    "properties": {
        "exclusive_name": {
            "description": "Specify an exclusive name for the object. Will have unintended behavior if multiple objects are created with a unique name",
            "type": "string"
        },
        "position": {
            "description": "The object's position",
            "$ref": "./vector2.schema.json"
        },
        "size": {
            "description": "The size of the object",
            "$ref": "./vector2.schema.json"
        },
        "rotation": {
            "description": "The rotation of the object (in radians)",
            "type": "number"
        },
        "shape": {
            "description": "The shape of the object (using vector2s for points)",
            "type": "array",
            "items": {
                "$ref": "./vector2.schema.json"
            },
            "minItems": 3
        }
    }
}